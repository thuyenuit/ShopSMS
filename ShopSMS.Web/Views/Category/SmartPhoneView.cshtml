        $("#popupHang").css("display", "none");
        $("#selectSP").val(valSelected);
        GenericChooseFilter();
    });

    function GenericChooseFilter() {
        var textHtml = '';
        var showAll = 0;

        var selectedSP = $("#selectSP").val();
        if (selectedSP != '' && selectedSP != 'undefined' && selectedSP != null) {
            var arraySP = selectedSP.split(',');
            for (var i = 0; i < arraySP.length - 1; i++) {
                showAll++;
                var tensp = $('#popupHang').find('input[name="hang-' + arraySP[i] + '"]').attr("default");

                var id = 'abc' + arraySP[i];
                textHtml += "<a href='javascript:;' id='" + id + "' onclick='RemoveFilter(" + arraySP[i] + ")' class='choose-filter'>";
                textHtml += tensp;
                textHtml += "<span> X</span></a>";
            }
        }

        var valPrice = $("#selectPrice").val();
        if (valPrice != 1 && valPrice > 1) {
            showAll++;
            var txt = $("#selectTxtPrice").val();

            var id = 'abc' + valPrice;
            var textHtml2 = "<a href='javascript:;' id='" + id + "' onclick='RemoveFilter(" + valPrice + ")' class='choose-filter'>";
            textHtml2 += txt;
            textHtml2 += "<span> X</span></a>";
            textHtml += textHtml2;
        }

        if (textHtml.length > 0) {
            if (showAll >= 2) {
                textHtml += "<a href='/dien-thoai' class='choose-filter-2'> Xóa tất cả <span> X</span></a>";
            }
            $(".choosedfilter").html(textHtml);
        }
    }

