                    if (valCheck == 2) {
                        txt = 'Dưới 1 triệu';
                    }
                    else if (valCheck == 3) {
                        txt = 'Từ 1 - 3 triệu';
                    }
                    else if (valCheck == 4) {
                        txt = 'Từ 3 - 7 triệu';
