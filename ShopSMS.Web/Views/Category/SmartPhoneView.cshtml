<script>

    $(document).click(function (event) {
        if (($(event.target).closest("#hienthiSP").html() == null
            || $(event.target).closest("#hienthiSP").html() == "undefined")
            && ($(event.target).closest("#popupHang").html() == null
            || $(event.target).closest("#popupHang").html() == "undefined")) {
            $("#popupHang").css("display", "none");
        }

        if (($(event.target).closest("#hienthiGia").html() == null
            || $(event.target).closest("#hienthiGia").html() == "undefined")
            && ($(event.target).closest("#popupGia").html() == null
            || $(event.target).closest("#popupGia").html() == "undefined")) {
            $("#popupGia").css("display", "none");
        }

        if (($(event.target).closest("#hienthiOrderBy").html() == null
            || $(event.target).closest("#hienthiOrderBy").html() == "undefined")
            && ($(event.target).closest("#popupOrderBy").html() == null
            || $(event.target).closest("#popupOrderBy").html() == "undefined")) {
            $("#popupOrderBy").css("display", "none");
        }

        if ($('#popupGia').find('input[name="price1"]').is(':checked')) {
            $("#searchByPrice").css("display", "inline-block");
        }
    });

    $("#searchByPrice").click(function () {
        $('#popupGia').find('input[name="price1"]').each(function () {
            if ($(this).is(':checked')) {
                var valCheck = $(this).val();
                if (valCheck != 1 && valCheck > 1) {
                    var txt = '';
                    if (valCheck == 2) {
                        txt = 'Dưới 1 triệu';
                    }
                    else if (valCheck == 3) {
                        txt = 'Từ 1 - 3 triệu';
                    }
                    else if (valCheck == 4) {
                        txt = 'Từ 3 - 7 triệu';
                    }
                    else if (valCheck == 5) {
                        txt = 'Từ 7 - 10 triệu';
                    }
                    else if (valCheck == 6) {
                        txt = 'Từ 10 - 15 triệu';
                    }
                    else if (valCheck == 7) {
                        txt = 'Trên 15 triệu';
                    }

                    $("#selectPrice").val(valCheck);
                    $("#selectTxtPrice").val(txt);

                    GenericChooseFilter();
                }                
            }
        });
    });

    $("#btnSeachCategory").click(function () {
        var valSelected = '';
        $('#popupHang').find('input[name^="hang-"]').each(function () {
            if ($(this).is(':checked')) {
                valSelected += $(this).val() + ',';
            }
        });

        $("#selectSP").val(valSelected);
        GenericChooseFilter();
    });   

    function GenericChooseFilter() {
        var textHtml = '';
        var showAll = 0;

        var selectedSP =$("#selectSP").val();
        if(selectedSP != '' && selectedSP != 'undefined' && selectedSP != null)
        {
            var arraySP = selectedSP.split(',');
            for (var i = 0; i < arraySP.length -1; i++)
            {
                showAll++;
                var tensp = $('#popupHang').find('input[name="hang-' + arraySP[i] + '"]').attr("default");

                var id = 'abc' + arraySP[i];
                textHtml += "<a href='javascript:;' id='" + id + "' onclick='RemoveFilter(" + arraySP[i] + ")' class='choose-filter'>";
                textHtml += tensp;
                textHtml += "<span> X</span></a>";
            }
        }


        var valPrice = $("#selectPrice").val();
        if (valPrice != 1 && valPrice > 1)
        {
            showAll++;
            var txt = $("#selectTxtPrice").val();

            var id = 'abc' + valPrice;
            var textHtml2 = "<a href='javascript:;' id='" + id + "' onclick='RemoveFilter(" + valPrice + ")' class='choose-filter'>";
            textHtml2 += txt;
            textHtml2 += "<span> X</span></a>";
            textHtml += textHtml2;
        }

        if (showAll >= 2) {
            textHtml += "<a href='/dien-thoai' class='choose-filter-2'> Xóa tất cả <span> X</span></a>";
        }

        $(".choosedfilter").html(textHtml);
    }

    function showOrHideGia() {

        if ($('#popupGia').hasClass("showGia")) {
            $("#popupGia").removeClass("showGia");
            $("#popupGia").css("display", "none");
        }
        else {
            $("#popupGia").addClass("showGia");
            $('#popupGia').css("display", "inline-block");
        }
    }

    function showOrHide() {

        if ($('#popupHang').hasClass("showSP")) {
            $("#popupHang").removeClass("showSP");
            $("#popupHang").css("display", "none");
        }
        else {
